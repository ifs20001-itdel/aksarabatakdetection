<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".HomeActivity">

        <!-- Background Image -->
        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logobatak"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Semi-transparent Overlay -->
        <View
            android:id="@+id/overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deteksi Aksara Batak Toba"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Description Text -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Aplikasi ini dapat mendeteksi objek berupa aksara Batak Toba dan menerjemahkannya ke dalam bahasa Indonesia. Aplikasi ini bertujuan untuk melestarikan dan memudahkan pembelajaran aksara Batak Toba."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/welcomeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Aksara Batak Toba Section -->
        <TextView
            android:id="@+id/aksaraTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aksara Batak Toba"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/descriptionText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <TextView
            android:id="@+id/aksaraText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Aksara Batak Toba adalah sistem penulisan tradisional yang digunakan oleh masyarakat Batak Toba. Aksara ini memiliki bentuk yang unik dan digunakan dalam berbagai naskah kuno."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/aksaraTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Images Section -->
        <ImageView
            android:id="@+id/imageAksara"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:src="@drawable/aksara_batak"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/aksaraText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Usage Instructions Section -->
        <TextView
            android:id="@+id/usageInstructionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cara Menggunakan Aplikasi"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/imageAksara"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <TextView
            android:id="@+id/usageInstructionsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1. Tekan tombol 'Live' untuk mendeteksi aksara secara langsung melalui kamera."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/usageInstructionsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Image 1 -->
        <ImageView
            android:id="@+id/Image1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/image1"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@+id/usageInstructionsText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Image 2 -->
        <ImageView
            android:id="@+id/Image2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/image2"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@+id/Image1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Image 3 -->
        <ImageView
            android:id="@+id/Image3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/image3"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@+id/Image2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Additional Instructions -->
        <TextView
            android:id="@+id/usageInstructionsUpload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2. Tekan tombol 'Upload' untuk mengunggah gambar dari galeri dan mendeteksi aksara dalam gambar tersebut."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/Image3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Image 4 -->
        <ImageView
            android:id="@+id/Image4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/image4"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@+id/usageInstructionsUpload"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Image 5 -->
        <ImageView
            android:id="@+id/Image5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/image5"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@+id/Image4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Image 6 -->
        <ImageView
            android:id="@+id/Image6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/image6"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toBottomOf="@+id/Image5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Hasil Instructions -->
        <TextView
            android:id="@+id/usageInstructionsHasil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3. Hasil deteksi akan ditampilkan di layar beserta terjemahannya."
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/Image6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.5" />

        <!-- Get Started Button -->
        <Button
            android:id="@+id/getStartedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:textColor="#FFFFFF"
            android:backgroundTint="#c21d03"
            app:layout_constraintTop_toBottomOf="@+id/usageInstructionsHasil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:onClick="onGetStartedClick" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


